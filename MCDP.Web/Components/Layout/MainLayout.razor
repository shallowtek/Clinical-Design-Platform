@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Routing

<div class="flex min-h-screen bg-gray-100">
    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-md overflow-y-auto">
        <NavMenu />
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-x-hidden">
        <!-- Top Bar -->
        <header class="bg-white shadow-sm z-10">
            <div class="px-6 py-4 flex items-center justify-between">
                <h1 class="text-xl font-semibold text-gray-800">Clinical Trial Design Platform</h1>
                <nav class="space-x-4">
                    <NavLink href="/" class="text-gray-600 hover:text-indigo-600" Match="NavLinkMatch.All">Home</NavLink>
                    <NavLink href="/protocols" class="text-gray-600 hover:text-indigo-600" Match="NavLinkMatch.Prefix">Protocols</NavLink>
                    <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-gray-600 hover:text-indigo-600">About</a>
                </nav>
            </div>
        </header>

        <!-- Body -->
        <main class="flex-1 overflow-auto p-6 bg-gray-50">
            @Body
        </main>
    </div>
</div>

<!-- Error UI -->
<div id="blazor-error-ui">
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50">
        <div class="bg-white p-6 rounded-lg shadow-lg">
            <p class="mb-4 text-red-600 font-semibold">An unhandled error has occurred.</p>
            <div class="flex justify-end space-x-4">
                <button class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 reload">Reload</button>
                <button class="px-4 py-2 bg-gray-300 rounded dismiss">Dismiss</button>
            </div>
        </div>
    </div>
</div>
